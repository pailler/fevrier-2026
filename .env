# Configuration de la base de données
DATABASE_URL=postgresql://qrlink_user:qrlink_password@postgres:5432/qrlink_db
REDIS_URL=redis://redis:6379

# Configuration JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Configuration de l'application
NODE_ENV=development
PORT=7001
CORS_ORIGIN=http://localhost:7000
APP_URL=http://localhost:7002

# Configuration des QR codes
QR_STORAGE_PATH=./storage/qr-codes
QR_DEFAULT_SIZE=300
QR_DEFAULT_FORMAT=png

# Configuration de la géolocalisation (optionnel)
GEOIPUPDATE_ACCOUNT_ID=your_account_id
GEOIPUPDATE_LICENSE_KEY=your_license_key

# Configuration des emails (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Configuration des webhooks (optionnel)
WEBHOOK_SECRET=your-webhook-secret

# Configuration du monitoring (optionnel)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Configuration de sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration des fichiers
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/svg+xml
